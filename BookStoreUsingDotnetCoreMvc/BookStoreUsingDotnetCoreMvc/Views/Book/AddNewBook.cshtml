@model BookModel
@{
    ViewData["Title"] = "Add new book";
}
<div class="container">
    <h3 class="display-4">Add new book</h3>
    @*<form method="post" asp-controller="book" asp-action="AddNewBook">*@
<form method="post">
    @*As we are using the same name as file name and action method name in same controller then no need to specify the url for submit button*@
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="TotalPages"></label>
        <input asp-for="TotalPages" class="form-control"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Add book" class="btn btn-primary" />
    </div>
</form>

</div>